#include <stdio.h>
#include <limits.h>
#include <float.h>
int main(){
    int integer =  INT_MAX;
    float flt = FLT_MAX;
    double dfp = DBL_MAX;
    printf("Integer= %d\nFloat = %f\nDouble = %f\n",integer,flt,dfp);
    printf("Sizeof integer = %lu\nSizeof float = %lu\nSizeof double = %lu\n",
    sizeof(integer),sizeof(flt),sizeof(dfp));
    return 0;
}
