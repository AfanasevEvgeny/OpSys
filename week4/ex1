#include <stdio.h>
#include <stdlib.h>
#include <sys/types.h>

int main() {
  int n;
  pid_t f_pid = fork();
  pid_t pid = getpid();
  if (f_pid == 0) printf("Hello from child [%d - %d]\n", pid, n);
    else printf("Hello from parent [%d - %d]\n", pid, n);
  return 0;
}



