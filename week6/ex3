#include<stdio.h>

void main()
{
    int n,n1;
    int ttat=0,twt=0;
    float awt,atat;
    printf("Enter the number of Processors \n");
    scanf("%d",&n);
    n1=n;
    int bt[n],flag[n],q,need[n],wt[n],ct[n],tat[n],i,j;
    printf("\n Enter the quantum \n");
    scanf("%d",&q);
    for(i=1;i<=n;i++)
    {
        printf("\n Enter the Burst Time for the process:");
        scanf("%d",&bt[i]);
        need[i]=bt[i];
    }
    for(i=1;i<=n;i++)
    {
        flag[i]=1;
        wt[i]=0;   
    }
    while(n!=0)
    {
    for(i=1;i<=n;i++){
            if(need[i]>=q){
                for(j=1;j<=n;j++){
                    if((i!=j)&&(flag[i]==1)&&(need[j]!=0))
                        wt[j]+=q;
                    }
                need[i]-=q;
                if(need[i]==0){
                    flag[i]=0;
                    n--;
                }
            else{
                for(j=1;j<=n;j++){
                    if((i!=j)&&(flag[i]==1)&&(need[j]!=0))
                    wt[j]+=need[i];
                }
                need[i]=0;
                n--;
                flag[i]=0;
            }
        }
    }
    for(i=1;i<=n1;i++){
        tat[i]=wt[i]+bt[i];
        twt=twt+wt[i];
        ttat=ttat+tat[i];
    
    }
    for (int h=0;h<n;h++){
        ct[i]=tat[i];
    }
    awt=(float)twt/n1;
    atat=(float)ttat/n1;
  
    printf("\n\n Process \t BurstTime \t Waiting Time \tTurnaroundTime\t Completion time \n ");
    for(i=1;i<=n1;i++){
        printf("\n %5d \t\t %5d \t\t %5d \t\t %5d\t\t %5d \n",  i,bt[i],wt[i],tat[i],ct[i]);    
}
printf("\n The average Waiting Time=%f",awt);
printf("\n The average Turnaround Time=%f",atat);
getch();
}
